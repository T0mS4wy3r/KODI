<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="0,0" end="0,-100" time="300" />
		<effect type="fade" start="0" end="100" time="300" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" start="0,-100" end="0,0" delay="1200" time="300" />
		<effect type="fade" start="100" end="0" delay="1200" time="300" />
	</animation>
	<controls>
		<control type="group">
			<posx>270</posx>
			<posy>685</posy>
			<visible>!Window.IsActive(2006)</visible>
			<!-- Background Panel -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>5</posy>
				<width>700</width>
				<height>110</height>
				<texture flipy="true">dialogs/dialogbg_icon2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<!-- Default Icon -->
			<control type="image" id="400">
				<posx>30</posx>
				<posy>30</posy>
				<width>48</width>
				<height>48</height>
				<aspectratio>keep</aspectratio>
				<texture diffuse="frames/square_matte.png">DefaultIconInfo.png</texture>
			</control>
			<!-- Text -->
			<control type="fadelabel" id="401">
				<description>Line 1 Label</description>
				<posx>85</posx>
				<posy>10</posy>
				<width>580</width>
				<height>52</height>
				<font>METF_DialogSmallBold</font>
				<textcolor>DialogTextFO</textcolor>
				<align>left</align>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
			<control type="fadelabel" id="402">
				<description>Line 2 Label</description>
				<posx>85</posx>
				<posy>55</posy>
				<width>580</width>
				<height>52</height>
				<font>METF_DialogSmallBold</font>
				<textcolor>TextNF</textcolor>
				<align>left</align>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
		</control>
	</controls>
</window>
