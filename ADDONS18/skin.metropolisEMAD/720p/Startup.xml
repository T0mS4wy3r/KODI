<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
	<onload condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,silent=True)</onload>


	<onload condition="String.IsEmpty(Skin.String(ShowDate))">Skin.SetBool(ShowDate)</onload>
	<onload condition="String.IsEmpty(Skin.String(OSDFade))">Skin.SetString(OSDFade,Complete)</onload>
	<onload condition="String.IsEmpty(Skin.String(OSDFadeTime))">Skin.SetString(OSDFadeTime,5)</onload>
	<onload condition="String.IsEmpty(Skin.String(autoscroll))">Skin.SetBool(autoscroll)</onload>
	<onload condition="String.IsEmpty(Skin.String(autoscrollfast))">Skin.SetBool(autoscrollfast)</onload>
	<onload condition="String.IsEmpty(Skin.String(homestretchbackgrounds))">Skin.SetBool(homestretchbackgrounds)</onload>
	<onload condition="String.IsEmpty(Skin.String(languageicons.name))">Skin.SetString(languageicons.name,Language Flags Complete Pack)</onload>
	<onload condition="String.IsEmpty(Skin.String(LanguageIcons.path))">Skin.SetString(LanguageIcons.path,resource://resource.images.languageflags.completepack/)</onload>


	<controls />
</window>





